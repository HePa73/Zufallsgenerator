<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.henrypawlak.Zufallsgenerator.Controller">
   <center>
      <Label fx:id="lbOut" prefHeight="17.0" prefWidth="96.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <Button fx:id="btGenerieren" mnemonicParsing="false" text="Generieren" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <TextField fx:id="tfInput" promptText="Zufallszahl von 0 - ?" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <VBox prefHeight="0.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton fx:id="rbZahl" mnemonicParsing="false" text="Zahl" />
            <RadioButton fx:id="rbBuchstabe" mnemonicParsing="false" text="Buchstabe" />
            <RadioButton fx:id="rbJN" mnemonicParsing="false" text="Ja/Nein" />
         </children>
      </VBox>
   </left>
</BorderPane>
